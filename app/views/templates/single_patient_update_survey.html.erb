<div class="container" ng-controller="SurveyController">
	<h1>{{patient.name}}</h1>
  <h2>{{patient.surgery_type}}</h2>
  <h2>{{patient.knee_location}} Knee</h2>
	<br />
	<table class="table table-striped">
    <thead>
      <tr>
        <td><h4>{{survey.time_period}}</h4></td>
        <td colspan="5" class="tbl-center"><h4>Rating (1-Low to 5-High)</h4></td>
      </tr>
      <tr>
        <td><h5>Question</h5></td>
        <td class="tbl-center"><h5>1</h5></td>
        <td class="tbl-center"><h5>2</h5></td>
        <td class="tbl-center"><h5>3</h5></td>
        <td class="tbl-center"><h5>4</h5></td>
        <td class="tbl-center"><h5>5</h5></td>
    </thead>
    <tbody>
      <tr  ng-repeat="question in questions">
        <td>{{question.body}}</td>
        <td class="questionBox tbl-center" ng-click="selectRating(checkbox)"><img src={{question_checkbox[0].img_url}} /></td>
        <td class="questionBox tbl-center" ng-click="selectRating(checkbox)"><img src={{question_checkbox[1].img_url}} /></td>
        <td class="questionBox tbl-center" ng-click="selectRating(checkbox)"><img src={{question_checkbox[2].img_url}} /></td>
        <td class="questionBox tbl-center" ng-click="selectRating(checkbox)"><img src={{question_checkbox[3].img_url}} /></td>
        <td class="questionBox tbl-center" ng-click="selectRating(checkbox)"><img src={{question_checkbox[4].img_url}} /></td>
      </tr>
    </tbody>
  </table>

</div>